<!-- answers#home -->
<div class="row">
  <div class="col-md-12">
    <h1>Respuestas</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-7">
    <% @categories.each_slice(2) do |r| %>
    <div class="row">
      <% r.each do |c| %>
      <div class="col-md-6">
        <h3 class="category">
          <a href="<%= url_for({ controller: 'answers',
                   action: 'category',
                   category_url: c.url })%>"><%= c.name %></a>
        </h3>
        <%= render partial: 'answer', collection: c.top_answers %>
        <% if c.more_answers? %>
        <p><a href="<%= url_for({ controller: 'answers',
                    action: 'category',
                    category_url: c.url })%>">Ver m√°s &raquo;</a></p>
        <% end %>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="col-md-5">
    <div id="answer-sidebar">
      <h2>Buscar</h2>
      <%= render 'search' %>
    </div>
  </div>
</div>
