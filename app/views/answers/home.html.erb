<%= render 'search' %>

<!-- answers#home -->
<div class="container">
  <div class="row">
    <div class="col-md-8 left-answers">
      <% if @results && @results.count > 1 %>
      <%= render 'results' %>
      <% else %>
      <%= render 'top' %>
      <% end %>
    </div>
    <div id="sidebar-answer" class="col-md-4">
      <%= render 'cta' %>
      <%= render 'categories' %>
    </div>
  </div>
</div>

<!-- analytics -->
<script>
  <% if @results %>
  ga('set', 'page', '/respuestas/buscar');
  ga('set', 'title', 'Busqueda en respuestas');
  ga('send', 'pageview');
  <% else %>
  ga('set', 'page', '/respuestas');
  ga('set', 'title', 'Respuestas');
  ga('send', 'pageview');
  <% end %>  
</script>
