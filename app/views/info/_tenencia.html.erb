<div class="row">
  <% if @vehicle.tenencias_unpaid > 0 %>
  <!-- con adeudos de tenencia -->
  <div class="col-xs-1"><%= icon(:error) %></div>
  <div class="col-xs-11">  
    <p><% if @vehicle.tenencias_unpaid > 1 %>
      <strong>Tu auto tiene adeudos por los años
        <%= @vehicle.tenencias_unpaid_str %>.</strong>  
      <% else %>
      <strong>Tu auto tiene un adeudo por el año
        <%= @vehicle.tenencias_unpaid_str %>.</strong>
      <% end %>
    </p>
    <p>Recuerda que debes pagar tus adeudos de tenencia antes de llevar
      tu auto a verificar.</p>
  </div>
  <% else %>
  <!-- sin adeudos de tenencia -->
  <div class="col-xs-1"><%= icon(:ok) %></div>
  <div class="col-xs-11">  
    <p>Tu auto no tiene adeudos de tenencia.</p>
  </div>
  <% end %>
</div>
