<!-- notices#confirm -->
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="title">Suscribirse a recordatorios</h1>
    </div>
  </div>
  
  <!-- confirmacion -->
  <div class="row">
    <div class="col-md-8 col-sm-12">
      <%= icon(:ok) %>
      <p class="msg"><strong>Tu suscripción esta confirmada.</strong></p>
      <p class="msg">Recibiras los recordatorios de tu
        auto con placa <strong><%= @user.plate %></strong> en tu correo
        electrónico.</p>
    </div>
  </div>
</div>

<!-- analytics -->
<script>
  ga('set', 'page', '/recordatorios/confirmado');
  ga('set', 'title', 'Suscripción confirmada');
  ga('send', 'pageview');
</script>
