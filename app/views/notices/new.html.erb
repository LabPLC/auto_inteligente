<!-- notices#results -->
<div class="row">
  <div class="col-md-offset-2 col-md-8 text-center">
    <h1>Avisos</h1>
  </div>
</div>

<!-- resultado -->
<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <% if @user.via == 'EMAIL' %>
    <div class="alert alert-info">Debe confirmar su suscripción a los
      avisos de su auto con placa <strong><%= @user.plate %></strong>
      visitando la dirección que le enviamos a su correo
      electrónico.</div>
    <% elsif @user.via == 'PHONE' %>
    <div class="alert alert-info">Debe confirmar su suscripción a los
      avisos de su auto con placa <strong><%= @user.plate %></strong>
      presionando la tecla <strong>1</strong> durante la llamada
      telefonica que realizaremos a su número de telefono.</div>
    <% elsif @user.via == 'TWITTER' %>
    <div class="alert alert-info">TWITTER</div>
    <% end %>
  </div>
</div>

<!-- analytics -->
<script>
  ga('set', 'page', '/notices/results');
  ga('set', 'title', 'Notices - Results');
  ga('send', 'pageview');
</script>

<% if Rails.env.development? %>
<!-- debug -->
<h2>Debug</h2>
<h3>@params</h3>
<%= debug(@params) %>
<h3>@errors</h3>
<%= debug(@errors) %>
<h3>@user</h3>
<%= debug(@user) %>
<h3>@settings</h3>
<%= debug(@settings) %>
<% end %>
