<!-- notices#email -->
<input type="hidden" name="user[via]" value="EMAIL">

<div class="row">
  <div class="col-md-12">
    <p class="lead">¿Cual es la placa de su auto y su dirección de
      correo electrónico?</p>
  </div>
</div>

<% if request.post? %>
<% if @errors[:INVALID_PLATE] && @errors[:INVALID_DESTINATION] %>
<div class="row">
  <div class="col-md-6">
    <div class="alert alert-warning"><strong>La placa que ingreso no es
        de un auto particular de la Ciudad de México.</strong></div>
  </div>
  <div class="col-md-6">
    <div class="alert alert-warning"><strong>El correo electrónico que
        ingreso no es valido.</strong></div>
  </div>
</div>
<% elsif @errors[:INVALID_PLATE] || @errors[:INVALID_DESTINATION] %>
<div class="row">
  <div class="col-md-12">
    <div class="alert alert-warning">
      <% if @errors[:INVALID_PLATE] %>
      <strong>La placa que ingreso no es de un auto particular de la
        Ciudad de México.</strong>
      <% end %>
      <% if @errors[:INVALID_DESTINATION] %>
      <strong>El correo electrónico que ingreso no es valido.</strong>
      <% end %>
    </div>
  </div>
</div>
<% end %>
<% end %>

<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <div class="row">
        <div class="col-sm-6">
          <input type="text" class="form-control"
                 id="input-notices-plate" name="user[plate]"
                 <% if request.post? && !@errors[:INVALID_PLATE] %>
                 value="<%= @user[:plate] %>"
                 <% end %>
                 placeholder="Placa de auto">
        </div>
      </div>
      <span class="help-block">Solo autos particulares de la Ciudad de
        México</span>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <div class="row">
        <div class="col-sm-9">
          <input type="email" class="form-control"
                 id="input-notices-email" name="user[destination]"
                 <% if request.post? && !@errors[:INVALID_DESTINATION] %>
                 value="<%= @user[:destination] %>"
                 <% end %>
                 placeholder="Correo electrónico">
        </div>
      </div>
      <span class="help-block">No compartiremos su dirección personal</span>
    </div>
  </div>
</div>

<%= render 'settings' %>

<div class="row">
  <div class="col-md-12 text-center">
    <button id="btn-notices-ok" type="submit"
            class="btn btn-primary btn-notices-form">Continuar</button>
  </div>
</div>
