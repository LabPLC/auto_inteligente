<!-- notices#email -->
<div class="form-group">
  <label for="input-notcies-email"
         class="col-md-4 control-label">¿Cuál es tu correo electrónico?</label>
  <div class="col-md-4">
    <input id="input-notices-email" type="text"
           class="form-control input-notices" 
           <% if params[:email].present? && params[:email][:address].present? %>
           value="<%= params[:email][:address] %>"
           <% end %>
           placeholder="Correo electrónico" name="email[address]">
  </div>
  <div class="col-md-4 error-notices">
    <% if request.post? && @errors[:INVALID_EMAIL_ADDRESS] %>
    <%= icon(:error) %>
    <p class="msg"><strong>El correo electrónico no es
        valido.</strong></p>
    <% end %>
  </div>
</div>

<div class="form-group">
  <div class="col-md-4 col-md-offset-4">
    <button type="submit" class="btn btn-primary">Suscribirse</button>
  </div>
</div>
